<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table>
    <tbody>
         <tr>
      <div class="field">
    <td><%= f.label :"(姓)" %></td>
    <td><%= f.text_field :last_name, autofocus: true %></td>
  </div>
        <div class="field">
    <td><%= f.label :"(名)" %></td>
    <td><%= f.text_field :first_name, autofocus: true %></td>
  </div>
  </tr>
  <tr>
        <div class="field">
    <td><%= f.label :"(セイ)" %></td>
    <td><%= f.text_field :last_name_kana, autofocus: true %></td>
  </div>
          <div class="field">
    <td><%= f.label :"(メイ)" %></td>
    <td><%= f.text_field :first_name_kana, autofocus: true %></td>
  </div>
  </tr>

<tr>
  <div class="field">
    <td><%= f.label :"メールアドレス" %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>
  </tr>
<tr>
    <div class="field">
    <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
   <td><%= f.text_field :postal_code, autofocus: true %></td>
  </div>
  </tr>
  <tr>
      <div class="field">
    <td><%= f.label :"住所" %></td>
    <td><%= f.text_field :address, autofocus: true %></td>
  </div>
  </tr>
  <tr>
        <div class="field">
    <td><%= f.label :"電話番号（ハイフンなし）" %></td>
    <td><%= f.text_field :telephone_number, autofocus: true %></td>
  </div>
</tr>
<tr>
  <div class="field">
   <td> <%= f.label :"パスワード" %></td>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </div>
  </tr>
  <tr>

  <div class="field">
    <td><%= f.label :"パスワード（確認用）" %></td>
   <td> <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </div>
  </tr>
  <tr>

  <div class="actions">
    <td><%= f.submit "新規登録" %></td>
  </div>
  </tr>
<% end %>
<tr>
<td><h5>既に登録済みの方</h5></td>
</tr>
  <tr>
<td><%= link_to "こちら", new_customer_session_path %>からログインしてください</td>
</tr>