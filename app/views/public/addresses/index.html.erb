<h3>配送先登録/一覧</h3>
    <%= form_with model: @address, url:addresses_path, local:true do |f| %>

    <p>郵便番号（ハイフンなし）</p>
    <%= f.text_field :postal_code %>
    <p>住所</p>
    <%= f.text_field :address %>
    <p>宛名</p>
    <%= f.text_field :name %>


    <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>

        <th><p>郵便番号<p></th>
         <th><p>住所<p></th>
          <th><p>宛名<p></th>
          <th><p><p></th>


      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
         <tr>
           <td><%= address.postal_code %></td>
           <td><%= address.address %></td>
           <td><%= address.name %></td>
           <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
           <%= link_to "削除", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger " %>
           </td>
         </tr>
       <% end %>
    </tbody>
  </table>