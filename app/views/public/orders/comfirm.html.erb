
  <h1>注文情報確認</h1>
  <div class="container">
  <div class="row">
      <div class="col-lg-9">
  <table class="table table-hover table-inverse">
    <thead>

      <tr>
        <th><p>商品名</p></th>
        <th><p>単価（税込）</p></th>
        <th><p>数量</p></th>
        <th><p>小計</p></th>

      </tr>
    </thead>

    <tbody>
      <% array = [] %>
      <% @cart_items.each do |cart_item| %>
      <% array << ((cart_item.item.price*1.08)*(cart_item.amount)).to_i %>
         <tr>
           <td> <%= attachment_image_tag cart_item.item, :image, size: "60x60", fallback: "no_image.jpg" %>
               <%= cart_item.item.name %></td>
           <td><%= (cart_item.item.price*1.08).to_i %></td>
           <td>
               <%= cart_item.amount %>
            </td>
            <td><%= ((cart_item.item.price*1.08)*(cart_item.amount)).to_i %></td>
         </tr>
       <% end %>
    </tbody>
  </table>
  </div>
  <div class="col-lg-3">
      <p>送料</p><%= @order.shipping_cost %>
      <p>商品合計</p><%= array.sum %>
      <p>請求金額</p><%= (( array.sum)+(@order.shipping_cost)) %>
   </div>
   </div>
  <div class="row">
    <div class="col-lg-4">
      <h6>支払方法</h6>
  </div>
  <div class="col-lg-8">
　　　　<% if @order.payment_method == 0 %>
          　クレジットカード
           <% else %>
           銀行振込
           <% end %>
    </div>
  </div>
 <div class="row">
    <div class="col-lg-4">
      <h6>お届け先</h6>
  </div>
  <div class="col-lg-8">
      <%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
    </div>
    <%= form_with model:@order_new, url:orders_path, local:true do |f| %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
    <%= f.hidden_field :total_payment, :value => (( array.sum)+(@order.shipping_cost)) %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <%= f.submit '注文を確定する', class: "btn btn-success" %>
    <% end %>
  </div>