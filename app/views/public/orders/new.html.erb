

 <h2>注文情報入力</h2>
 <%= form_with model:@order, url:orders_confirm_path, local:true do |f| %>
  <table>
   <tbody>
  <tr><td><h5>支払方法</h5></td></tr>
<tr><td>
  <%= f.radio_button :payment_method, 0 %>
  <%= f.label :payment_method, "クレジットカード", {value: :クレジットカード, style: "display: inline-block;"} %>
  </td></tr>
  <tr><td>
  <%= f.radio_button :payment_method, 1 %>
  <%= f.label :payment_method, "銀行振込", {value: :銀行振込, style: "display: inline-block;"} %>
  </td>
  </tr>

    <tr><td><h5>お届け先</h5></td></tr>

    <tr><td>
     <%= f.radio_button :select_address, 1 %>
  <%= f.label :address, "ご自身の住所", {value: :ご自身の住所ド, style: "display: inline-block;"} %>
  　〒<%= current_customer.postal_code %>
  　</td>
  </tr>
<tr><td>
  <%= f.radio_button :select_address, 2 %>
  <%= f.label :address, "登録済み住所から選択", {value: :登録済み住所から選択, style: "display: inline-block;"} %>
   <%= f.collection_select :address_id, @addresses, :id, :address, include_blank: '--選択してください--' %>
</td>
  </tr>
  <tr><td>
    <%= f.radio_button :select_address, 3 %>
  <%= f.label :address, "新しいお届け先", {value: :新しいお届け先, style: "display: inline-block;"} %>
    <p>郵便番号（ハイフンなし）</p>
    <%= f.text_field :postal_code %>
    <p>住所</p>
    <%= f.text_field :address %>
    <p>宛名</p>
    <%= f.text_field :name %>

  </td>
  </tr>

<tr><td><%= f.submit '確認画面へ進む', class: "btn btn-primary" %></td></tr>
<% end %>
    </tbody>
 </table>