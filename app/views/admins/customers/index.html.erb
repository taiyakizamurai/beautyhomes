
  <h1>会員一覧</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th><p>会員ID</p></th>
        <th><p>氏名</p></th>
        <th><p>メールアドレス</p></th>
        <th><p>ステータス</p></th>


      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
         <tr>
           <td><%= customer.id %></td>
           <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
           <td><%= customer.email %></td>
           <td><% if customer.is_deleted == false %>
          　有効
           <% else %>
           退会
           <% end %></td>
         </tr>
       <% end %>
    </tbody>
  </table>
